@page
@model AgiloxSortingHall.Pages.IndexModel
@{
    ViewData["Title"] = "Výběr stolu";
}

<div class="container py-4">

    <!-- Hlavička stránky -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold m-0">Agilox Sorting Hall</h1>
            <div class="text-muted fs-6">Vyber stůl pro obsluhu</div>
        </div>

        <!-- Odkaz na skladníka -->
        <a asp-page="/Skladnik"
           class="btn btn-outline-primary btn-lg d-flex align-items-center">
            <i class="bi bi-box-seam me-2 fs-3"></i>
            <span>Obrazovka skladníka</span>
        </a>
    </div>

    @if (!Model.Tables.Any())
    {
        <div class="alert alert-info">
            Žádné stoly nejsou k dispozici.
        </div>
    }
    else
    {
        <!-- Grid dlaždic stolů -->
        <div class="row g-3">

            @foreach (var item in Model.Tables)
            {
                var table = item.Table;
                var call = item.PendingCall;
                var hasPending = call != null;
                var rowName = call?.HallRow?.Name ?? "neznámá řada";
                var article = call?.HallRow?.Article;

                <div class="col-12 col-md-6 col-lg-4 d-flex">
                    <a asp-page="/Stul"
                       asp-route-id="@table.Id"
                       class="btn btn-light border rounded flex-fill p-4 text-start d-flex flex-column justify-content-between">

                        <!-- Horní část: ikona stavu + název stolu -->
                        <div class="d-flex align-items-center mb-2">

                            @if (!hasPending)
                            {
                                <i class="bi bi-check-circle-fill text-success fs-2 me-3"></i>
                            }
                            else
                            {
                                <i class="bi bi-clock-fill text-warning fs-2 me-3"></i>
                            }

                            <span class="fs-2 fw-semibold">@table.Name</span>
                        </div>

                        <!-- Spodní část: textový popis stavu -->
                        <div class="mt-2">
                            @if (!hasPending)
                            {
                                <div class="text-success fw-semibold fs-5 mb-1">Připraveno</div>
                                <div class="text-muted">Žádný čekající požadavek.</div>
                            }
                            else
                            {
                                <div class="text-warning fw-semibold fs-5 mb-1">Čeká na paletu</div>
                                <div class="text-muted">
                                    Řada: <strong>@rowName</strong>
                                    @if (!string.IsNullOrWhiteSpace(article))
                                    {
                                        <span> · Artikl <strong>@article</strong></span>
                                    }
                                </div>
                            }
                        </div>


                    </a>
                </div>
            }

        </div>
    }

</div>

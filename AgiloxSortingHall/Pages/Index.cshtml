@page
@using AgiloxSortingHall.Models
@model AgiloxSortingHall.Pages.IndexModel
@{
    ViewData["Title"] = "Výběr stolu";
}

<div class="container py-4 text-light">

    <!-- Hlavička stránky -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold m-0">Agilox na hale třídění</h1>
            <div class="text-secondary fs-6">Vyber stůl pro obsluhu</div>
        </div>

        <!-- Odkaz na skladníka -->
        <a asp-page="/Skladnik"
           class="btn btn-outline-info btn-lg d-flex align-items-center px-4 py-2">
            <i class="bi bi-box-seam me-2 fs-3"></i>
            <span class="fs-5">Obrazovka skladníka</span>
        </a>
    </div>

    @if (!Model.Tables.Any())
    {
        <div class="alert alert-info">
            Žádné stoly nejsou k dispozici.
        </div>
    }
    else
    {
        <!-- Grid dlaždic stolů -->
        <div class="row g-3">

            @foreach (var item in Model.Tables)
            {
                var table = item.Table;
                var call = item.PendingCall;
                var hasPending = call != null;
                var rowName = call?.HallRow?.Name ?? "neznámá řada";
                var article = call?.HallRow?.Article;
                var activity = call != null ? Model.GetActivityDescription(call) : null;

                <div class="col-12 col-md-6 col-lg-4 d-flex">
                    <a asp-page="/Stul"
                       asp-route-id="@table.Id"
                       class="btn bg-dark text-light border border-secondary rounded-3
                                              flex-fill p-4 text-start d-flex flex-column justify-content-between shadow-sm">

                        <!-- Horní část: ikona stavu + název stolu -->
                        <div class="d-flex align-items-center mb-2">

                            @if (!hasPending)
                            {
                                <i class="bi bi-check-circle-fill text-success fs-2 me-3"></i>
                            }
                            else
                            {
                                <i class="bi bi-clock-fill text-warning fs-2 me-3"></i>
                            }

                            <span class="fs-2 fw-semibold">@table.Name</span>
                        </div>

                        <!-- Spodní část: textový popis stavu -->
                        <div class="mt-2">
                            @if (!hasPending)
                            {
                                <div class="text-success fw-semibold fs-5 mb-1">
                                    Připraveno
                                </div>
                                <div class="text-secondary">
                                    Žádný čekající požadavek.
                                </div>
                            }
                            else
                            {
                                <div class="text-warning fw-semibold fs-5 mb-1">
                                    Probíhá požadavek
                                </div>
                                <div class="text-light small opacity-75">
                                    @activity (@article - @rowName)
                                </div>
                            }
                        </div>

                    </a>
                </div>
            }

        </div>
    }

</div>
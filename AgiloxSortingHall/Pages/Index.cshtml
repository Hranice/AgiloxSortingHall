@page
@using AgiloxSortingHall.Models
@using AgiloxSortingHall.Helpers
@using AgiloxSortingHall.ViewModels
@using AgiloxSortingHall.Enums
@model AgiloxSortingHall.Pages.IndexModel
@{
    ViewData["Title"] = "Výběr stolu";
}

<div class="container py-4 text-light">

    <!-- Hlavička stránky -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold m-0">Agilox na hale třídění</h1>
            <div class="text-secondary fs-6">Vyber stůl pro obsluhu</div>
        </div>

        <!-- Odkaz na skladníka -->
        <a asp-page="/Skladnik"
           class="btn btn-outline-info btn-lg d-flex align-items-center px-4 py-2">
            <i class="bi bi-box-seam me-2 fs-3"></i>
            <span class="fs-5">Obrazovka skladníka</span>
        </a>
    </div>

    @if (!Model.Tables.Any())
    {
        <div class="alert alert-info">
            Žádné stoly nejsou k dispozici.
        </div>
    }
    else
    {
        <!-- Grid dlaždic stolů -->
        <div class="row g-3">

            @foreach (var item in Model.Tables)
            {
                var table = item.Table;
                var pendingCall = item.PendingCall;
                var lastCall = item.LastCall;

                var hasPending = pendingCall != null;

                // call, ze kterého bereme popis stavu (pending > last)
                var callForInfo = pendingCall ?? lastCall;

                AgiloxActivityViewModel? activityVm = null;
                if (callForInfo != null)
                    activityVm = AgiloxActivityDescriptionHelper.GetActivityUi(callForInfo);

                var rowName = callForInfo?.HallRow?.Name ?? "neznámá řada";
                var article = callForInfo?.HallRow?.Article;

                var isWaitingForWarehouse = hasPending && pendingCall!.OrderId == null;

                // poslední chyba/varování i bez pending callu
                var hasLastError = !hasPending &&
                activityVm != null &&
                activityVm.Severity != AgiloxSeverity.Info;

                var hasArticleOrRow = !string.IsNullOrWhiteSpace(article) || rowName != "neznámá řada";

                var detailUrl = Url.Page("/Stul", new { id = table.Id });

                <div class="col-12 col-md-6 col-lg-4 d-flex">
                    <div class="bg-dark text-light border border-secondary rounded-3
                                        flex-fill p-4 text-start d-flex flex-column justify-content-between shadow-sm
                                        js-table-card"
                         data-url="@detailUrl">

                        <!-- Horní řádek: ikonka + název + Odvézt -->
                        <div class="d-flex align-items-center justify-content-between mb-3">

                            <div class="d-flex align-items-center">
                                @* Ikonka stavu *@
                                @if (hasPending && activityVm != null)
                                {
                                    if (activityVm.Severity == AgiloxSeverity.Error)
                                    {
                                        <i class="bi bi-exclamation-octagon-fill text-danger fs-2 me-3"></i>
                                    }
                                    else if (activityVm.Severity == AgiloxSeverity.Warning)
                                    {
                                        <i class="bi bi-exclamation-triangle-fill text-warning fs-2 me-3"></i>
                                    }
                                    else if (isWaitingForWarehouse)
                                    {
                                        <i class="bi bi-box-seam text-warning fs-2 me-3"></i>
                                    }
                                    else
                                    {
                                        <i class="bi @activityVm.IconCss @activityVm.TextCss fs-2 me-3"></i>
                                    }
                                }
                                else
                                {
                                    <i class="bi bi-check-circle-fill text-success fs-2 me-3"></i>
                                }

                                @* Název stolu (klik řeší kartička přes JS) *@
                                <span class="fs-2 fw-semibold text-light">
                                    @table.Name
                                </span>
                            </div>

                            @* Tlačítko Odvézt – pouze pokud není pending *@
                            @if (!hasPending)
                            {
                                <form method="post" asp-page-handler="Done" class="m-0 js-stop-click">
                                    <input type="hidden" name="tableId" value="@table.Id" />

                                    <button type="submit"
                                            class="btn btn-done btn-lg d-flex align-items-center px-3 py-2"
                                            title="Označit jako odvézt – odvézt paletu od stolu do řady">
                                        <i class="bi bi-check2-circle fs-4 me-1"></i>
                                        Odvézt
                                    </button>
                                </form>
                            }
                        </div>

                        <!-- Stav + 3 fixní řádky pro zarovnání -->
                        <div class="mt-1">

                            @* 1. řádek – hlavní stav, vždy *@
                            <div class="fw-semibold fs-5 @(hasPending && activityVm != null ? activityVm.TextCss : "text-success")">
                                @if (hasPending && activityVm != null)
                                {
                                    @activityVm.Text
                                }
                                else
                                {
                                    @:Připraveno
                                }
                            </div>

                            @* 2. řádek – artikl a řada (nebo prázdná linka kvůli zarovnání) *@
                            <div class="text-light small opacity-75 mt-1">
                                @if (hasArticleOrRow)
                                {
                                    <i class="bi bi-box-seam me-1"></i>
                                    @($"{article} - {@rowName}")
                                                        }
                                else
                                {
                                    @:&nbsp;
                                }
                            </div>

                            @* 3. řádek – poslední stav / "žádný požadavek" / prázdno u pending *@
                            <div class="small mt-1 @(hasLastError && !hasPending && activityVm != null ? activityVm.TextCss : "text-secondary")">
                                @if (!hasPending)
                                {
                                    @if (hasLastError && activityVm != null)
                                    {
                                        <i class="bi @activityVm.IconCss me-1"></i>
                                        @activityVm.Text
                                    }
                                    else
                                    {
                                        @:Žádný čekající požadavek.
                                    }
                                }
                                else
                                {
                                    @:&nbsp;
                                }
                            </div>
                        </div>

                    </div>
                </div>
            }

        </div>
    }

</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Klik na celou dlaždici -> přechod na detail stolu
            document.querySelectorAll('.js-table-card').forEach(function (card) {
                card.addEventListener('click', function (e) {
                    // pokud klikneme na tlačítko / form uvnitř, neřešíme navigaci
                    if (e.target.closest('.js-stop-click') ||
                        e.target.closest('button') ||
                        e.target.closest('a[href]')) {
                        return;
                    }

                    var url = card.getAttribute('data-url');
                    if (url) {
                        window.location.href = url;
                    }
                });
            });
        });
    </script>
}

@page
@using AgiloxSortingHall.Models
@using AgiloxSortingHall.ViewModels
@model AgiloxSortingHall.Pages.SkladnikModel

@{
    ViewData["Title"] = "Skladník";

    var maxCapacity = Model.Rows.Any() ? Model.Rows.Max(r => r.Capacity) : 0;
    var columnCount = Model.Rows.Count;
}

<div class="container-fluid hall-page" style="--slot-count:@maxCapacity; --column-count:@columnCount;">

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center my-3">
                <h1 class="mb-0 d-flex align-items-center text-light">
                    <i class="bi bi-person-gear me-2"></i>
                    Skladník
                </h1>

                <button class="btn btn-dark btn-lg d-flex align-items-center px-3 py-2"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#settingsPanel"
                        aria-expanded="false"
                        aria-controls="settingsPanel">
                    <i class="bi bi-gear-fill me-2 fs-4"></i>
                    <span class="fs-5">Nastavení</span>
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger py-2">@Model.ErrorMessage</div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="collapse" id="settingsPanel">
                <div class="card my-2 bg-dark text-light border-secondary">
                    <div class="card-header bg-secondary bg-opacity-25 border-secondary d-flex align-items-center">
                        <i class="bi bi-sliders me-2"></i>
                        <span>Nastavení výběru řady pro artikly (používají stoly)</span>
                    </div>

                    <div class="card-body">
                        <form method="post" asp-page-handler="SetRowSelectionStrategy" class="mb-0">

                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="strategy"
                                       id="strategyMostFree"
                                       value="MostFreePallets"
                                       @(Model.CurrentStrategy == RowSelectionStrategy.MostFreePallets ? "checked" : "") />
                                <label class="form-check-label" for="strategyMostFree">
                                    Nejvíc volných palet
                                    <small class="text-muted d-block">
                                        Vybere řadu s daným artiklem, kde je nejvíc volných palet.
                                    </small>
                                </label>
                            </div>

                            <div class="form-check mt-2">
                                <input class="form-check-input"
                                       type="radio"
                                       name="strategy"
                                       id="strategyLeft"
                                       value="NearestLeft"
                                       @(Model.CurrentStrategy == RowSelectionStrategy.NearestLeft ? "checked" : "") />
                                <label class="form-check-label" for="strategyLeft">
                                    Nejblíž vlevo
                                    <small class="text-muted d-block">
                                        Vždy bere řadu nejvíc vlevo.
                                    </small>
                                </label>
                            </div>

                            <div class="form-check mt-2">
                                <input class="form-check-input"
                                       type="radio"
                                       name="strategy"
                                       id="strategyRight"
                                       value="NearestRight"
                                       @(Model.CurrentStrategy == RowSelectionStrategy.NearestRight ? "checked" : "") />
                                <label class="form-check-label" for="strategyRight">
                                    Nejblíž vpravo
                                    <small class="text-muted d-block">
                                        Vždy bere řadu nejvíc vpravo.
                                    </small>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary btn-sm mt-3">
                                Uložit nastavení
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hall-columns-container">
        @foreach (var row in Model.Rows)
        {
            <div class="hall-column">

                @await Html.PartialAsync(
                "_HallColumnVisual",
                        new HallColumnViewModel
                        {
                            Row = row,
                            MaxCapacity = maxCapacity,
                            PendingCalls = Model.PendingCalls,
                            CurrentTableId = null
                        }
                        )

            <form method="post" class="w-100 mt-2" id="row-form-@row.Id">
                <input type="hidden" name="rowId" value="@row.Id" />

                <div class="input-group mb-2">
                    <input type="text"
                           class="form-control form-control-lg bg-dark text-light border-secondary"
                           placeholder="Název artiklu"
                           name="RowArticle[@row.Id]"
                           value="@(Model.RowArticle[row.Id])" />

                    <button class="btn btn-dark btn-lg d-flex align-items-center justify-content-center border-secondary"
                            type="submit"
                            asp-page-handler="SetArticle">
                        <i class="bi bi-pencil-fill fs-4 text-info"></i>
                    </button>
                </div>

                <button class="btn btn-success btn-lg w-100 py-3 fw-bold d-flex align-items-center justify-content-center icon-white"
                        type="submit"
                        asp-page-handler="AddPallet">
                    <i class="bi bi-plus-lg me-2"></i>
                </button>

                <!-- Odebrání palety – otevře potvrzovací modal a předá rowId -->
                <button class="btn btn-outline-danger btn-lg w-100 py-3 fw-bold mt-2 d-flex align-items-center justify-content-center border-danger icon-white"
                        type="button"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmRemoveModal"
                        data-row-id="@row.Id">
                    <i class="bi bi-dash-lg me-2"></i>
                </button>
            </form>
        </div>
                }
    </div>
</div>

<!-- Modal pro potvrzení odebrání palety -->
<div class="modal fade" id="confirmRemoveModal" tabindex="-1" aria-labelledby="confirmRemoveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title d-flex align-items-center" id="confirmRemoveModalLabel">
                    <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                    Odebrat paletu
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Opravdu chceš odebrat jednu paletu z této řady?</p>
                <p class="text-muted small mb-0">
                    Určeno pouze pro opravu omylem přidané palety.
                </p>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zrušit</button>

                @* VLASTNÍ FORM PRO REMOVE PALLET *@
                <form method="post" asp-page-handler="RemovePallet" id="removePalletForm" class="m-0">
                    <input type="hidden" name="rowId" id="removePalletRowId" value="" />
                    <button type="submit" class="btn btn-danger" id="confirmRemoveBtn">
                        Odebrat paletu
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var confirmModal = document.getElementById('confirmRemoveModal');
            var rowIdInput = document.getElementById('removePalletRowId');

            // Když se modal otevírá, vezmeme z tlačítka rowId a vložíme do hidden inputu
            confirmModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var rowId = button ? button.getAttribute('data-row-id') : null;

                if (rowIdInput && rowId) {
                    rowIdInput.value = rowId;
                }
            });
        });
    </script>
}

@page
@using AgiloxSortingHall.Models
@using AgiloxSortingHall.ViewModels
@model AgiloxSortingHall.Pages.SkladnikModel

@{
    // Titulek stránky pro layout a prohlížeč
    ViewData["Title"] = "Skladník";

    // Zjištění největší kapacity řad – používá se pro CSS grid
    var maxCapacity = Model.Rows.Any() ? Model.Rows.Max(r => r.Capacity) : 0;
    var columnCount = Model.Rows.Count;
}

<div class="container-fluid hall-page" style="--slot-count:@maxCapacity; --column-count:@columnCount;">

    <div class="row">
        <div class="col-12">
            @* Hlavička s názvem a tlačítkem pro nastavení *@
            <div class="d-flex justify-content-between align-items-center my-3">
                <h1 class="mb-0 d-flex align-items-center">
                    <i class="bi bi-person-gear me-2"></i>
                    Skladník
                </h1>

                @* Tlačítko, které rozbaluje/sbalí panel s nastavením *@
                <button class="btn btn-outline-secondary btn-lg d-flex align-items-center px-3 py-2"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#settingsPanel"
                        aria-expanded="false"
                        aria-controls="settingsPanel">
                    <i class="bi bi-gear-wide-connected me-2 fs-4"></i>
                    <span class="fs-5">Nastavení</span>
                </button>
            </div>
        </div>
    </div>

    @* Zobrazení chyby pokud nějaká vznikla (např. nevalidní operace apod.) *@
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger py-2">@Model.ErrorMessage</div>
            </div>
        </div>
    }

    @* Panel s nastavením schovaný v collapse *@
    <div class="row">
        <div class="col-12">
            <div class="collapse" id="settingsPanel">
                <div class="card my-2">
                    <div class="card-header d-flex align-items-center">
                        <i class="bi bi-sliders me-2"></i>
                        <span>Nastavení výběru řady pro artikly (používají stoly)</span>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="SetRowSelectionStrategy" class="mb-0">

                            <div class="form-check">
                                <input class="form-check-input"
                                       type="radio"
                                       name="strategy"
                                       id="strategyMostFree"
                                       value="MostFreePallets"
                                       @(Model.CurrentStrategy == RowSelectionStrategy.MostFreePallets ? "checked" : "") />
                                <label class="form-check-label" for="strategyMostFree">
                                    Nejvíc volných palet
                                    <small class="text-muted d-block">
                                        Vybere řadu s daným artiklem, kde je nejvíc volných palet
                                        (obsazené sloty mínus už odeslané call-y na Agiloxe).
                                    </small>
                                </label>
                            </div>

                            <div class="form-check mt-2">
                                <input class="form-check-input"
                                       type="radio"
                                       name="strategy"
                                       id="strategyLeft"
                                       value="NearestLeft"
                                       @(Model.CurrentStrategy == RowSelectionStrategy.NearestLeft ? "checked" : "") />
                                <label class="form-check-label" for="strategyLeft">
                                    Nejblíž vlevo
                                    <small class="text-muted d-block">
                                        Vždy bere řadu nejvíc vlevo (podle pořadí řad v hale).
                                    </small>
                                </label>
                            </div>

                            <div class="form-check mt-2">
                                <input class="form-check-input"
                                       type="radio"
                                       name="strategy"
                                       id="strategyRight"
                                       value="NearestRight"
                                       @(Model.CurrentStrategy == RowSelectionStrategy.NearestRight ? "checked" : "") />
                                <label class="form-check-label" for="strategyRight">
                                    Nejblíž vpravo
                                    <small class="text-muted d-block">
                                        Vždy bere řadu nejvíc vpravo (podle pořadí řad v hale).
                                    </small>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary btn-sm mt-3">
                                Uložit nastavení
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Kontejner se všemi sloupci (řadami v hale) *@
    <div class="hall-columns-container">
        @foreach (var row in Model.Rows)
        {
            <div class="hall-column">

                @* Vizuální reprezentace řady *@
                @await Html.PartialAsync(
                "_HallColumnVisual",
                        new HallColumnVisualModel
                        {
                            Row = row,
                            MaxCapacity = maxCapacity,
                            PendingCalls = Model.PendingCalls,
                            CurrentTableId = null
                        })

            @* Formulář pro manipulaci s danou řadou *@
            <form method="post" class="w-100 mt-2" id="row-form-@row.Id">
                <input type="hidden" name="rowId" value="@row.Id" />

                <div class="input-group mb-2">
                    <input type="text"
                           class="form-control form-control-lg"
                           placeholder="Název artiklu"
                           name="RowArticle[@row.Id]"
                           value="@(Model.RowArticle[row.Id])" />

                    <button class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-center"
                            type="submit"
                            asp-page-handler="SetArticle">
                        <i class="bi bi-pencil fs-4"></i>
                    </button>
                </div>

                <button class="btn btn-success btn-lg w-100 py-3 fw-bold d-flex align-items-center justify-content-center"
                        type="submit"
                        asp-page-handler="AddPallet">
                    <i class="bi bi-plus-lg me-2"></i>
                    <span>+1</span>
                </button>

                @* Odebrání palety – otevře potvrzovací modal *@
                <button class="btn btn-outline-danger btn-lg w-100 py-3 fw-bold mt-2 d-flex align-items-center justify-content-center"
                        type="button"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmRemoveModal"
                        data-form-id="row-form-@row.Id">
                    <i class="bi bi-dash-lg me-2"></i>
                    <span>-1</span>
                </button>
            </form>
        </div>
                }
    </div>
</div>

@* Bootstrap modal pro potvrzení odebrání palety *@
<div class="modal fade" id="confirmRemoveModal" tabindex="-1" aria-labelledby="confirmRemoveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title d-flex align-items-center" id="confirmRemoveModalLabel">
                    <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
                    Odebrat paletu
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">
                    Opravdu chceš odebrat jednu paletu z této řady?
                </p>
                <p class="text-muted small mb-0">
                    Akce je určena pro opravu omylem přidané palety. Neovlivní běžící požadavky na Agiloxe,
                    pouze změní počet fyzicky evidovaných palet v řadě.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Zrušit
                </button>
                <button type="button" class="btn btn-danger" id="confirmRemoveBtn">
                    Odebrat paletu
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var confirmModal = document.getElementById('confirmRemoveModal');
            var formIdToSubmit = null;

            // Když se modal otevírá, vezmeme z tlačítka id formuláře
            confirmModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                formIdToSubmit = button ? button.getAttribute('data-form-id') : null;
            });

            // Po potvrzení v modalu odešleme daný formulář
            var confirmButton = document.getElementById('confirmRemoveBtn');
            confirmButton.addEventListener('click', function () {
                if (formIdToSubmit) {
                    var form = document.getElementById(formIdToSubmit);
                    if (form) {
                        form.submit();
                    }
                }
            });
        });
    </script>
}
